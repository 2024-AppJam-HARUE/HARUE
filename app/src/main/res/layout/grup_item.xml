<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3F3F3">
    <ImageView
        android:id="@+id/groupImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"
        android:src="@drawable/icon"
        android:background="@drawable/circle"
        />
    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintStart_toEndOf="@id/groupImg"
        app:layout_constraintTop_toTopOf="@id/groupImg"
        app:layout_constraintBottom_toTopOf="@id/gneraitDayText"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/gneraitDayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2007.02.10"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintStart_toEndOf="@id/groupImg"
        app:layout_constraintTop_toBottomOf="@id/nameText"
        app:layout_constraintStart_toStartOf="@id/nameText"
        />
    <TextView
        android:id="@+id/person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2007.02.10"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintStart_toEndOf="@id/groupImg"
        app:layout_constraintTop_toBottomOf="@id/nameText"
        app:layout_constraintStart_toStartOf="@id/nameText"
        />



</androidx.constraintlayout.widget.ConstraintLayout>