<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.rank.RankFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/TitlePanel"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="@+id/TitlePanel"
            app:layout_constraintStart_toStartOf="@+id/TitlePanel"
            app:layout_constraintBottom_toBottomOf="@+id/TitlePanel"
            android:layout_marginLeft="14dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/TitlePanel"
            app:layout_constraintStart_toStartOf="@+id/TitlePanel"
            app:layout_constraintBottom_toBottomOf="@+id/TitlePanel"
            app:layout_constraintEnd_toEndOf="@+id/TitlePanel"
            android:text="현재 랭킹"
            android:textSize="20dp"
            android:textColor="@color/black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/rankingScrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/myRankingPanel"
        app:layout_constraintStart_toStartOf="@+id/TitlePanel"
        app:layout_constraintTop_toBottomOf="@+id/TitlePanel"
        app:layout_constraintVertical_bias="0.0">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/otherRankingPanel01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="@+id/rankingScrollview"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/lightgray">
            <TextView
                android:id="@+id/otherRanking01"
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/otherRankingPanel01"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/otherRankingPanel01"
                android:layout_marginLeft="10dp"
                android:text="1위"
                android:textSize="24dp"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/otherFace01"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:layout_constraintTop_toTopOf="@+id/otherRankingPanel01"
                app:layout_constraintStart_toEndOf="@+id/otherRanking01"
                app:layout_constraintBottom_toBottomOf="@+id/otherRankingPanel01"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon"
                android:background="@color/lightgray"/>
            <TextView
                android:id="@+id/otherName01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/otherRankingPanel01"
                app:layout_constraintStart_toEndOf="@+id/otherNameId01"
                app:layout_constraintBottom_toBottomOf="@+id/otherRankingPanel01"
                android:layout_marginLeft="5dp"
                android:text="#1234"
                android:textSize="16dp"
                android:textColor="@color/skyblue"/>
            <TextView
                android:id="@+id/otherNameId01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/otherRankingPanel01"
                app:layout_constraintStart_toEndOf="@+id/otherFace01"
                app:layout_constraintBottom_toBottomOf="@+id/otherRankingPanel01"
                android:layout_marginLeft="10dp"
                android:text="이현지"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/otherPoint01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/otherRankingPanel01"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/otherRankingPanel01"
                android:layout_marginRight="10dp"
                android:text="123456789P"
                android:textSize="16dp"
                android:textColor="@color/black"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/myRankingPanel"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/salmon"/>
    <TextView
        android:id="@+id/myRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/myRankingPanel"
        app:layout_constraintStart_toStartOf="@+id/TitlePanel"
        app:layout_constraintBottom_toBottomOf="@+id/myRankingPanel"
        android:layout_marginLeft="10dp"
        android:text="n위"
        android:textSize="24dp"
        android:textColor="@color/white"/>
    <ImageView
        android:id="@+id/myFace"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="@+id/myRankingPanel"
        app:layout_constraintStart_toEndOf="@+id/myRanking"
        app:layout_constraintBottom_toBottomOf="@+id/myRankingPanel"
        android:layout_marginLeft="5dp"
        android:src="@drawable/icon"
        android:background="@drawable/circle"/>
    <TextView
        android:id="@+id/myName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/myRankingPanel"
        app:layout_constraintStart_toEndOf="@+id/myFace"
        app:layout_constraintBottom_toBottomOf="@+id/myRankingPanel"
        android:layout_marginLeft="10dp"
        android:text="엄준식"
        android:textSize="16dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/myNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/myRankingPanel"
        app:layout_constraintStart_toEndOf="@+id/myName"
        app:layout_constraintBottom_toBottomOf="@+id/myRankingPanel"
        android:layout_marginLeft="5dp"
        android:text="#1234"
        android:textSize="16dp"
        android:textColor="@color/skyblue"/>
    <TextView
        android:id="@+id/myPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/myRankingPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/myRankingPanel"
        android:layout_marginRight="10dp"
        android:text="123456789P"
        android:textSize="16dp"
        android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>