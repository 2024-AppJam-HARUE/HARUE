<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.my_page.MyPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profilePanel"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/lightgray">
        <ImageView
            android:id="@+id/profileFace"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="@+id/profilePanel"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="@+id/profilePanel"
            android:src="@drawable/icon"
            android:background="@drawable/circle"/>
        <ImageView
            android:id="@+id/profileFaceAddIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="@+id/profileFace"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="@+id/profileFace"
            android:src="@drawable/icon"
            android:background="@drawable/circle"/>
        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/profilePanel"
            android:layout_marginLeft="146dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="@+id/profilePanel"
            android:text="이름 : 이설아"
            android:textSize="16dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/profileIslove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/profilePanel"
            android:layout_marginLeft="146dp"
            android:layout_marginTop="110dp"
            app:layout_constraintTop_toTopOf="@+id/profilePanel"
            android:text="연애 : 하고싶다"
            android:textColor="@color/black"
            android:textSize="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/idPanel"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        app:layout_constraintTop_toBottomOf="@id/profilePanel"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/lightgray">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/idPanel"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="14dp"
            android:textSize="16dp"
            android:text="고유 ID"
            android:textColor="@color/tomato"
            app:layout_constraintTop_toTopOf="@id/idPanel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/idPanel"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="40dp"
            android:textSize="16dp"
            android:text="#1206"
            android:textColor="@color/tomato"
            app:layout_constraintTop_toTopOf="@id/idPanel"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pointPanel"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        app:layout_constraintTop_toBottomOf="@id/idPanel"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/lightgray">
        <TextView
            android:id="@+id/savePointRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="누적 포인트 등수"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@id/pointPanel"
            app:layout_constraintEnd_toStartOf="@id/partition01"
            app:layout_constraintTop_toTopOf="@id/pointPanel"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/value01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1등"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="@id/pointPanel"
            app:layout_constraintEnd_toStartOf="@id/partition01"
            app:layout_constraintBottom_toBottomOf="@id/pointPanel"
            android:textColor="@color/black"
            android:layout_marginBottom="40dp"/>
        <ImageView
            android:id="@+id/partition01"
            android:layout_width="1dp"
            android:layout_height="121dp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="@+id/pointPanel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.325"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/pointPanel" />
        <TextView
            android:id="@+id/useablePoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용 가능 포인트"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@id/partition01"
            app:layout_constraintEnd_toStartOf="@id/partition02"
            app:layout_constraintTop_toTopOf="@id/pointPanel"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/value02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345P"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="@id/partition01"
            app:layout_constraintEnd_toStartOf="@id/partition02"
            app:layout_constraintBottom_toBottomOf="@id/pointPanel"
            android:textColor="@color/black"
            android:layout_marginBottom="40dp"/>
        <ImageView
            android:id="@+id/partition02"
            android:layout_width="1dp"
            android:layout_height="121dp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="@+id/pointPanel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.675"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/pointPanel" />
        <TextView
            android:id="@+id/savePoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="누적 포인트"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@id/partition02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/pointPanel"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/value03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345P"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="@id/partition02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/pointPanel"
            android:textColor="@color/black"
            android:layout_marginBottom="40dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
<com.google.android.material.button.MaterialButton
    android:id="@+id/settingButton"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:background="@color/tomato"
    android:text="설정"
    android:textSize="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>